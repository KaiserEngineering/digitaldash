#:kivy 1.0

<Alert>:
    markup: True
    shorten_from: 'right'
    halign: 'center'
    valign: 'middle'
    size_hint: 0.5, 0.5
    # This limits text to fit within our alert
    text_size: root.width, None
    pos_hint: {"center_x": 0.50, "center_y": 0.85}
    canvas.before:
        Color:
            hsv: self.color
            a: 0.97
        Rectangle:
            id: 'Alert-'+str(self.message)
            size: self.size
            pos: self.pos
            source: app.working_path+'/static/images/Alerts/FordWarning.png' if hasattr(app, 'working_path') else 'static/images/Alerts/FordWarning.png'
